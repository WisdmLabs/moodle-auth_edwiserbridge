{{!
    @template auth_edwiserbridge/setup_wizard_header

    Setup wizard header template

    Context variables required for this template:
    * pageTitle: Page title
    * logoSrc: Logo source
    * headerTitle: Header title

    Example context (JSON):
    {
        "pageTitle": "value1",
        "logoSrc": "value2",
        "headerTitle": "value3"
    }
}}
<ul class="eb-setup-steps">
    {{#steps}}
        {{#top_level}}
            <li class="eb-setup-step eb-setup-step-{{key}} {{#is_completed}}eb-setup-step-completed{{/is_completed}}{{#is_active}}eb-setup-step-active{{/is_active}}-wrap">
                {{{html_icon}}}
                <span class="eb-setup-steps-title {{#is_completed}}eb-setup-step-completed{{/is_completed}}" data-step="{{key}}">
                    {{name}}
                </span>
            </li>
        {{/top_level}}
    {{/steps}}
</ul>
